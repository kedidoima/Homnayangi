<%- include('../layout/header.ejs') -%>

<link rel="stylesheet" href="../../stylesheets/suggestion.css">

<div class="suggestion_container container">
    <div class="row">
        <div class="col-md-8 px-5">
            <div class="d-flex align-items-center">
                <i class="fas fa-shopping-cart"></i>
                <p class="mx-3 my-0">Giỏ nguyên liệu</p>
            </div>
            <div class="cart_list">
                <!-- <div class="cart_item">
                    <span>Thịt bò</span>
                    <span class="remove"><i class="fas fa-times"></i></span>
                </div> -->
            </div>
        </div>
        <div class="col-md-4">
            <p class="title">Tìm kiếm nguyên liệu</p>
            <div class="search">
                <i class="fas fa-search search_icon"></i>
                <input type="text" class="search_input" id="search-input" onkeyup="searchIngredient()">
            </div>
            <ul class="ingredient_list" id="ingredient-list">
                <% for( let item of ingredients) { %>
                    <li onclick="addIngredient(<%= item['ingredient_id'] %>,  '<%= item['ingredient_name'] + '' %>')" >
                        <p><%= item.ingredient_name %></p>
                    </li>
                <% } %>
                
            </ul>
        </div>
    </div>
    <div class="text-center">
        <button type="button" class="btn submit_btn">Xác nhận</button>
    </div>
</div>

<script src="../../js/suggestion.js"></script>