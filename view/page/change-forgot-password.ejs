<%- include('../layout/header.ejs') -%>

<link rel="stylesheet" href="../../stylesheets/login.css">

<div class="container d-flex justify-content-center">
    <div class="form">
        <p class="title">Quên mật khẩu?</p>
        <form action="/user/change-forgot-password" method="POST">
            <div class="form-group">
                <label for="new-password">Mật khẩu mới :</label>
                <input class="form-input" required type="password" name="new_password" id="new-password">
            </div>
            <div class="form-group">
                <label for="cf-new-password">Nhập lại mật khẩu :</label>
                <input class="form-input" required type="password" name="cf_new_password" id="cf-new-password">
            </div>
            <div class="form-group">
                <label for="code">Mã Code : </label>
                <input class="form-input" required type="number" name="verify_code" id="code">
            </div>
            <% if (error) { %>
                <p class="my-3" style="color: red;" id="msg"><%= error %> </p>
            <% } %>
            <div class="text-center">
                <button class="btn">Đổi mật khẩu</button>
            </div>
            <p class="mt-5">*Mã Code sẽ được gửi tới email của bạn*</p>
        </form>
    </div>
</div>