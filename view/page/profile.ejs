<%- include('../layout/header.ejs') -%>

<link rel="stylesheet" href="../../stylesheets/login.css">
<div class="container d-flex justify-content-center">
    <div class="form">
        <p class="title">Thông tin cá nhân</p>
        <form action="">
            <div class="form-group">
                <label for="username">Tên tài khoản :</label>
                <input class="form-input" type="text" name="username" id="username">
            </div>
            <div class="form-group">
                <label for="firstname">Tên :</label>
                <input class="form-input" type="text" name="firstname" id="firstname">
            </div>
            <div class="form-group">
                <label for="lastname">Họ :</label>
                <input class="form-input" type="text" name="lastname" id="lastname">
            </div>
            <div class="form-group">
                <label for="email">Email :</label>
                <input class="form-input" type="email" name="email" id="email">
            </div>
            <div class="form-group">
                <label for="phone">SĐT :</label>
                <input class="form-input" type="email" name="phone" id="phone">
            </div>
            <div class="text-end mt-5">
                <a class="link" href="/user/change-password" style="font-weight: 500;">Đổi mật khẩu</a>
            </div>
        </form>
    </div>
</div>