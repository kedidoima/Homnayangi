<%- include('../layout/header.ejs') -%>

<link rel="stylesheet" href="../../stylesheets/login.css">

<div class="container d-flex justify-content-center">
    <div class="form">
        <p class="title">Đổi mật khẩu</p>
        <form action="/user/change-password" method="POST">
            <div class="form-group">
                <label for="old_password">Mật khẩu cũ :</label>
                <input class="form-input" required type="password" name="old_password" id="old_password">
            </div>
            <div class="form-group">
                <label for="new_password">Mật khẩu mới :</label>
                <input class="form-input" required type="password" name="new_password" id="new_password">
            </div>
            <div class="form-group">
                <label for="cf_new_password">Nhập lại mật khẩu :</label>
                <input class="form-input" required type="password" name="cf_new_password" id="cf_new_password">
            </div>
            <% if (error) { %>
                <p class="my-3" style="color: red;" id="msg"><%= error %> </p>
            <% } %>
            <% if (message) { %>
                <p class="my-3 text-success" ><%= message %></p>
            <% } %>
            <div class="text-center">
                <button class="btn">Lưu</button>
            </div>
        </form>
    </div>
</div>