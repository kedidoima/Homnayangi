<%- include('../layout/header.ejs') -%>

<link rel="stylesheet" href="../../stylesheets/login.css">

<div class="container d-flex justify-content-center">
    <div class="form">
        <p class="title">Quên mật khẩu?</p>
        <form action="/user/forgot-password" method="POST">
            <div class="form-group">
                <label for="username">Tên tài khoản :</label>
                <input class="form-input" type="text" name="user_name" id="username" value="<%= values.user_name %>">
            </div>
            <div class="form-group">
                <label for="email">Email :</label>
                <input class="form-input" type="email" name="user_email" id="email" value="<%= values.user_email %>">
            </div>
            <% if (error) { %>
                <p class="my-3" style="color: red;" id="msg"><%= error %> </p>
            <% } %>
            <div class="text-center">
                <a href="/user/change-forgot-password">
                    <button class="btn">Lấy lại mật khẩu</button>
                </a>
                
            </div>
        </form>
    </div>
</div>