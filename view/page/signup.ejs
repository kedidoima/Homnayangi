<%- include('../layout/header.ejs') -%>

<link rel="stylesheet" href="../../stylesheets/login.css">
<script src="../../js/signup.js"></script>

<div class="container d-flex justify-content-center">
    <div class="form">
        <p class="title">ĐĂNG KÝ TÀI KHOẢN</p>
        <form action="/user/signup" method="POST">
            <div class="form-group">
                <label for="user_name">Tên tài khoản :</label>
                <input required class="form-input" type="text" name="user_name" id="user_name" value="vhg">
            </div>
            <div class="form-group">
                <label for="email">Email :</label>
                <input required class="form-input" type="email" name="user_email" id="email" value="abc@gmail.com">
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu :</label>
                <input required class="form-input" type="password" name="user_password" id="password" value="123">
            </div>
            <div class="form-group">
                <label for="comfirm-password">Nhập lại mật khẩu :</label>
                <input required class="form-input" type="password" name="comfirm-password" id="comfirm-password" value="123">
            </div>
            <% if (msg_error) { %>
                <p class="my-3" style="color: red;" id="msg"><%= msg_error %> </p>
            <% } %>
            <div class="d-flex justify-content-end mt-4">
                <!-- <a class="link" href="/user/signup">Đăng ký tài khoản</a> -->
                <a class="link" href="/user/signup">Đăng nhập</a>
            </div>
            <div class="text-center mt-5">
                <button class="btn">Đăng Ký</button>
            </div>
        </form>
    </div>
</div>